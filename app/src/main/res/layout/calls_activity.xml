<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llCalls"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvCalls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="8pt"
        android:padding="15dp"
        android:text="Звонки"/>
    <ScrollView
        android:id="@+id/svCallsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:layout_below="@+id/tvCalls">

        <LinearLayout
            android:id="@+id/LLCallsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivChats"
            android:layout_width="33dp"
            android:layout_height="40dp"
            android:src="@drawable/chats" />

        <ImageView
            android:id="@+id/ivStats"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/state" />

        <ImageView
            android:id="@+id/ivGroups"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/groups" />

        <ImageView
            android:id="@+id/ivCalls"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/calls" />
    </LinearLayout>
</LinearLayout>