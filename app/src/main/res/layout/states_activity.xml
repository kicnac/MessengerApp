<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Статус"
        android:textSize="10pt"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rlBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/LLBtns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="190dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/seatch" />

            <ImageView
                android:id="@+id/ivMore"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/settings" />
        </LinearLayout>

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:hint="Search..."
            android:visibility="gone" />

        <Spinner
            android:id="@+id/spn_search"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etSearch"
            android:layout_marginLeft="10dp"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/spn_more"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etSearch"
            android:layout_alignBottom="@+id/LLBtns"
            android:visibility="gone" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/svStates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80">
        <LinearLayout
            android:id="@+id/LLStatusList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivChats"
            android:layout_width="33dp"
            android:layout_height="40dp"
            android:src="@drawable/chats" />

        <ImageView
            android:id="@+id/ivStats"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/state" />

        <ImageView
            android:id="@+id/ivGroups"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/groups" />

        <ImageView
            android:id="@+id/ivCalls"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/calls" />
    </LinearLayout>
</LinearLayout>